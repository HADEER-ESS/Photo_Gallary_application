<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/route_logo"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:scaleType="fitXY"
        android:src="@drawable/route_academy_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/theme_switch"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/theme_switch"
        android:layout_width="wrap_content"
        app:switchMinWidth="110dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/route_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/route_logo"
        app:layout_constraintTop_toTopOf="@id/route_logo"
        app:track="@drawable/custome_track"
        android:thumb="@drawable/custome_thumb"
        app:showText="false"
        app:thumbTint="@null"
        app:trackTint="@null"
        />

</androidx.constraintlayout.widget.ConstraintLayout>